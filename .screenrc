# Start message
startup_message off

# Set hardstatus always on
#hardstatus alwayslastline " %-Lw%{= Bw}%n%f %t%{-}%+Lw"
hardstatus alwayslastline
hardstatus string " %-Lw%{= Bw}%n%f %t%{-}%+Lw"

# Autodetach session on hangup instead of terminating screen completely
#autodetach on
# Refresh the display when exiting programs
altscreen on

# Dynamic title
shelltitle "$ |bash"
#shelltitle '> |bash'

# Disable vbell
vbell off

# screen buffer
defscrollback 30000
termcapinfo xterm ti@:te@

bindkey "^[." next
bindkey "^[," prev

#title "$basename"
#windowlist string "%+3| $HPWD"
#windowlist string "%+3| %t pwd: $PS2"
windowlist string "%03n: %h %=%f"
#windows
