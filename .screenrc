# 設定每個視窗的標題
caption always "%{= wk} %{= KY} [%n]%t @ %H %{-} %= %{= KR} %l %{-} | %{= KG} %Y-%m-%d %{-} "

# 設定總是顯示 screen 的狀態列
hardstatus alwayslastline " %-Lw%{= Bw}%n%f %t%{-}%+Lw %=| %0c:%s "

# next and prev screen
bindkey "^[." next
bindkey "^[," prev

#turn of the start message
startup_message off

#clean screen after vim
altscreen on
